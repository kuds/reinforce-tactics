{
  "$schema": "./config.schema.json",
  "tournament": {
    "name": "Simple Bot Tournament",
    "games_per_matchup": 2,
    "max_turns": 100,
    "map_pool_mode": "all",
    "should_reason": false,
    "log_conversations": false,
    "save_replays": true
  },
  "output": {
    "results_dir": "/app/output/results",
    "replay_dir": "/app/output/replays"
  },
  "maps": [
    "maps/1v1/beginner.csv",
    "maps/1v1/funnel_point.csv"
  ],
  "bots": [
    {
      "name": "SimpleBot",
      "type": "simple"
    },
    {
      "name": "MediumBot",
      "type": "medium"
    },
    {
      "name": "AdvancedBot",
      "type": "advanced"
    }
  ]
}
